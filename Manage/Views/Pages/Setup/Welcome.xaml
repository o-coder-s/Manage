<ui:Page
    x:Class="Manage.Views.Pages.Setup.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Manage.Views.Pages.Setup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Welcome"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ui:SimpleStackPanel
            Grid.Row="0"
            Margin="40"
            Spacing="20">
            <TextBlock FontSize="36" Text="Welcome" />
            <TextBlock FontSize="16" Text="Special Tank You for Trying The Software." />
        </ui:SimpleStackPanel>

        <Button
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Right"
            Content="Next"
            Style="{StaticResource AccentButtonStyle}" />
    </Grid>
</ui:Page>
